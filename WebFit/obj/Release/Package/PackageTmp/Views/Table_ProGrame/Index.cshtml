@model IEnumerable<WebFit.Models.Table_ProGrame>
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="box-header">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <h1 class="box-title">จัดการข้อมูลโปรแกรม</h1>
            <div style="float:left">
                <a class="btn btn-success" href="@Url.Action("Create", "Table_ProGrame")"><i class="fa fa-plus"></i> เพิ่มข้อมูล</a>
            </div>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PG_Name)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PG_Detail)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.PG_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PG_Pic)
            </th>

            <th>  @Html.DisplayNameFor(model => model.PG_Video)</th>
            <th>จัดการข้อมูล</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PG_Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.PG_Detail)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Table_TypePG.TypePG_Name)
                </td>
                <td>
                    @if (item.PG_Pic != null)
                    {
                        <img src="~/@item.PG_Pic" style="height: 85px" class="img-rounded">
                    }
                </td>
                <td>
                    @if (item.PG_Video != null)
                    {

                        <iframe src="@item.PG_Video" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    }
                </td>

                <td>

                    @*@Html.ActionLink("รายละเอียด", "Details", new { id = item.ID_Programe }, new { @class = "btn btn-primary" }) |*@
                    @Html.ActionLink("ลบ", "Delete", new { id = item.ID_Programe }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
